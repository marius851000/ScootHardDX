Class SHDX_LowGuardMale : SHDX_Enemy
{
	Default
	{
		//$Category "Monsters"
		//$Sprite GRD1A1
		//$Title "Low Guard (Male)"
		SeeSound "grunt1/sight";
		PainSound "grunt1/pain";
		DeathSound "grunt1/death";
		// ActiveSound "grunt1/active";
		Health 25;
		Radius 20;
		Height 56;
		Mass 100;
		Speed 8;
		PainChance 200;
		Obituary "$SHDX_OB_LOWGUARD";
		Tag "$SHDX_TAG_LOWGUARD";
		Species "Pony";
	}
	
	void A_DropItemsLowGuard()
	{
		if (target && target.CountInv("SHDX_BitCoin") < 50)
		{
			A_SHDX_DropItem("SHDX_SilverBitCoin", false);
		}
	}
	
	void A_LowGuardFire()
	{
		A_StartSound("grunt/attack", CHAN_WEAPON);
		A_SpawnProjectile("SHDX_LowGuardBullet", 16);
	}
	
	States
	{	
		Spawn:
			GRD1 A 10 A_Look;
			loop;
		See:
			// GRD1 B 0 A_StartSound("pony/walk", CHAN_BODY);
			GRD1 BCDE 4 A_Chase;
			// GRD1 B 0 A_StartSound("pony/walk", CHAN_BODY);
			GRD1 BCDE 4 A_Chase;
			Loop;
		Missile:
			GRD1 F 0 A_StopSound(CHAN_BODY);
			GRD1 F 10 A_FaceTarget;
			GRD1 G 8 Bright A_LowGuardFire;
			GRD1 F 4;
			Goto See;
		Pain:
			GRD1 H 3;
			GRD1 H 3 A_Pain;
			Goto See;
		Pain.Lightning:
			GRD1 H 0 A_SetElectrocutionTranslation();
			GRD1 H 3;
			GRD1 H 3 A_Pain;
			GRD1 H 0 A_ResetTranslation();
			Goto See;
		Death:
			GRD1 I 0 A_ResetTranslation();
			GRD1 I 5 A_NewScream;
			GRD1 J 5
			{
				A_NoBlocking();
				A_DropItemsLowGuard();
			}
			GRD1 K 5;
			GRD1 L -1 A_SetCorpseShootable;
			Stop;
		Death.Explosive:
		Death.Weather:
		Death.Extreme:
		XDeath:
			GIBX A 0 A_ResetTranslation();
			GIBX A 3
			{
				A_SHDX_ExtremeScreamAndUnblock();
				A_DropItemsLowGuard();
				A_SpawnGibsFx(self);
			}
			GIBX B 0 A_SHDX_GivePlayerOneLiner(SHDX_ONELINER_GIB_CHANCE);
			GIBX BC 5;
			GIBX D -1;
			Stop;
		Death.RainbowerX:
			GIBR A 4;
			GIBR B 0 A_SHDX_GivePlayerOneLiner(SHDX_ONELINER_GIB_CHANCE);
			GIBR BC 4;
			GIBR D -1;
			Stop;
		Ice:
			GRD1 H 5
			{
				A_GenericFreezeDeath();
			}
			GRD1 H 1
			{
				A_FreezeDeathChunks();
			}
			Wait;
		Crush:
			GIBX D 0 A_SHDX_SquishSound;
			GIBX D 1 A_SHDX_GivePlayerOneLiner;
			GIBX D -1;
			Stop;
	}
}

